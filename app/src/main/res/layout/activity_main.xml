<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/img"
    tools:context=".MainActivity">
    <!-- xmlns:android, xmlns:app, xmlns:tools:Ce sont des déclarations d'espace de noms XML qui associent des préfixes aux URI des schémas XML utilisés -->
<!--android:layout_width="match_parent" : Cet attribut spécifie que la largeur du LinearLayout doit occuper toute la largeur de son parent-->
<!--android:layout_height="match_parent" : Cet attribut spécifie que la hauteur du LinearLayout doit occuper toute la hauteur de son parent, généralement l'écran entier.--><
<!--android:orientation="vertical" : Cet attribut indique que les éléments à l'intérieur de ce LinearLayout doivent être disposés de manière verticale, c'est-à-dire empilés les uns au-dessus des autres.-->
<!--android:padding="20dp" : Cet attribut ajoute une marge de 20 "density-independent pixels" (dp) à toutes les extrémités du LinearLayout-->
<!--ndroid:background="@drawable/img" : Cet attribut définit l'arrière-plan du LinearLayout en utilisant une image-->
<!--tools:context=".MainActivity" : Cet attribut est principalement utilisé pour des besoins de développement.-->
<!--.main: indique qu'il est default-->
<!--layout_width w layout_height sont des attributs obligatoires -->


    <!-- Première TextView affichant le titre de  la page d'interface utilisateur-->


    <!--Utilise une police personnalisée, une taille de texte de 25sp, un style gras, et une couleur de texte noire.-->
    <!--Centrée horizontalement -->
    <!-- A une marge intérieure de 30dp en haut et en bas-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/playfair_display"
        android:gravity="center"
        android:text="Mesure de niveau de glycémie"
        android:padding="30dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        />

    <!-- TextView pour l'affichage de "Votre âge" -->


<!--Affiche l'étiquette "Votre âge" avec une taille de texte de 18sp et une couleur de texte noire-->
<!--A une marge de 20dp en haut par rapport à l'élément précédent-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/playfair_display"
        android:text="Votre âge:"
        android:textColor="@color/black"
        android:textSize="18sp" />
    <!-- SeekBar pour la sélection de l'âge -->
<!--Permet à l'utilisateur de sélectionner son âge-->
<!--La valeur maximale est de 120-->
<!--A une marge de 20dp par rapport à l'élément précédent-->

    <SeekBar
        android:id="@+id/sbAge"
        android:max="120"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        />
    <!-- Vue utilisée comme ligne séparatrice -->


 <!--Une simple vue utilisée comme ligne de séparation, avec une hauteur de 3dp et une marge de 20dp par rapport à l'élément précédent-->
 <!--View: Une simple vue utilisée comme ligne de séparation, avec une hauteur de 3dp et une marge de 20dp par rapport à l'élément précéden-->


    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/line_shape" />
    <!-- TextView pour la question "Est-ce que vous jeûnez ?" -->
<!--TextView pose la question "Est-ce que vous jeûnez ?" avec une taille de texte de 18sp et une couleur de texte noire. Elle a une marge de 20dp par rapport à l'élément précédent-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/playfair_display"
        android:text="Est-ce que vous jeûnez ?"
        android:textColor="@color/black"
        android:textSize="18sp" />
    <!-- RadioGroup contenant les boutons "Oui" et "Non" -->
<!-- Il contient deux boutons radio ("Oui" et "Non") organisés horizontalement. Les boutons ont une hauteur de 48dp et une taille de texte de 20sp-->

    <RadioGroup

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <!-- Bouton radio "Oui" -->

        <RadioButton
            android:id="@+id/rbtOui"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:checked="true"
            android:text="Oui"
            android:textColor="@color/black"
            android:textSize="20sp" />
        <!-- Bouton radio "Non" -->

        <RadioButton
            android:id="@+id/rbtNon"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Non"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </RadioGroup>
    <!-- Champ de texte (EditText) pour la valeur de la glycémie -->
<!--Il permet à l'utilisateur d'entrer la valeur de la glycémie. Il a une marge de 20dp en haut et de 50dp en bas. L'attribut "hint" fournit un exemple de ce qui doit être saisi-->

    <EditText
        android:id="@+id/edtValeurGlycemie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        android:hint="Valeur mesurée (en mmol/l)"
        android:inputType="numberDecimal"
        />
    <!-- Bouton "CONSULTER" pour déclencher une action -->
<!-- Ce bouton déclenche une action "calculer". Il a une largeur de correspondance parent, un arrière-plan personnalisé ("boutton_shape"), une marge de 18dp à droite, et une taille de texte de 20sp-->
    <Button
        android:id="@+id/btnConsulter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/boutton_shape"
        android:insetRight="18dp"
        android:onClick="calculer"
        android:padding="20dp"
        android:text="CONSULTER"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/black"

        android:textSize="20sp" />
</LinearLayout>